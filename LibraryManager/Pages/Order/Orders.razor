@page "/orderList"
@using LibraryManager.Components

@inject IOrderService OrderService
@inject NavigationManager NavigationManager

<h3>Orders</h3>
<button class="btn btn-primary" @onclick=CreateHandle>Tạo đơn mượn</button>
<table class="table">
	<thead>
		<tr>
			<th>Mã đơn</th>
			<th>Tên khách hàng</th>
			<th>Tiêu đề sách</th>
			<th>Trạng thái</th>
			
		</tr>
	</thead>
	<tbody>
		@foreach(var order in OrderService.OrderDtos)
		{
			<tr>
				<td>@order.Id</td>
				<td>@order.CustomerName</td>
				<td>@order.BookTitle</td>
				<td>@order.Status</td>
				@*<td>@order.CheckedOut.ToString("dd/MM/yyyy hh:mm")</td>
				<td>@order.Returned</td>*@
			</tr>
		}
	</tbody>
</table>
@code {

	protected override async Task OnInitializedAsync()
	{
		await OrderService.GetOrders();
	}
	void CreateHandle()
	{
		NavigationManager.NavigateTo("/orderCreate");
	}
}
